@model Ksiegarnia.ViewModels.Categories.CategoryViewModel

@{
    ViewData["Title"] = "Edit a Category";
    ViewData["Action"] = "Edit";
}
<div>
    <h2>Edit a Category</h2>
    
    <form asp-action="@(ViewData["Action"] as string)" asp-route-id="@Model.Id" method="post">
        <input type="hidden" asp-for="Id" />

        <partial name="_CategoryForm" model="Model"/>

    </form>
</div>