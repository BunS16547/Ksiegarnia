@model List<Ksiegarnia.ViewModels.Categories.CategoryViewModel>

@{
    ViewData["Title"] = "Categories";
}

<h2>Categories</h2>

@* CREATE  tylko dla adminów i edytorów*@
@if (User.IsInRole("Admin") || User.IsInRole("Editor")) {
    <a asp-action="Create" asp-controller="Categories" class="btn btn-primary mb-3">
        Add Category
    </a>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">No categories found.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Category name</th>
                <th>Books</th>
                <th class="text-end"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>
                        @if (category.BookTitles != null && category.BookTitles.Any())
                        {
                            <span>@string.Join(", ", category.BookTitles)</span>
                        }
                        else
                        {
                            <span class="text-muted">No books</span>
                        }
                    </td>
                    
                    @* EDIT / DELETE  tylko dla adminów i edytorów*@
                    @if (User.IsInRole("Admin") || User.IsInRole("Editor")) {
                        <td class="text-end">
                            <a asp-action="Edit" asp-controller="Categories" asp-route-id="@category.Id"
                               class="btn btn-sm btn-outline-secondary">
                                Edit
                            </a>
                            <a asp-action="Delete" asp-controller="Categories" asp-route-id="@category.Id"
                               class="btn btn-sm btn-outline-secondary">
                                Delete
                            </a>
                        </td>
                    }
                    else {
                        <td></td>
                    }
                </tr>
            }
        </tbody>
    </table>
}