@model List<Ksiegarnia.ViewModels.Books.BookViewModel>

@{
    ViewData["Title"] = "Books";
}

<h2>Books</h2>

@* CREATE  tylko dla adminów i edytorów*@
@if (User.IsInRole("Admin") || User.IsInRole("Editor")) {
    <a asp-action="Create" asp-controller="Books" class="btn btn-primary mb-3">
        Add Book
    </a>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">No books found.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>ISBN</th>
                <th>Category</th>
                <th>Available?</th>
                <th>Unavailable until</th>
                <th class="text-end"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>

                    <td>
                        @if (!string.IsNullOrWhiteSpace(book.AuthorName))
                        {
                            <span>@book.AuthorName</span>
                        }
                        else
                        {
                            <span class="text-muted">No author</span>
                        }
                    </td>

                    <td>
                        @if (!string.IsNullOrWhiteSpace(book.IsbnValue))
                        {
                            <span>@book.IsbnValue</span>
                        }
                        else
                        {
                            <span class="text-muted">No ISBN</span>
                        }
                    </td>

                    <td>
                        @if (!string.IsNullOrWhiteSpace(book.CategoryName))
                        {
                            <span>@book.CategoryName</span>
                        }
                        else
                        {
                            <span class="text-muted">No category</span>
                        }
                    </td>

                    <td>
                        @if (book.IsAvailableForRent)
                        {
                            <span>Yes</span>
                        }
                        else
                        {
                            <span class="text-muted">No</span>
                        }
                    </td>
                    
                    <td>
                        @if (book.IsAvailableForRent)
                        {
                            <span>-</span>
                        }
                        else
                        {
                            <span class="text-muted">@book.UnavailableUntil</span>
                        }
                    </td>

                    <td class="text-end">
                        <a asp-action="Details" asp-controller="Books" asp-route-id="@book.Id"
                           class="btn btn-sm btn-outline-secondary">
                            Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
