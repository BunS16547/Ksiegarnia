@model Ksiegarnia.ViewModels.Books.RentBookViewModel

@{
    ViewData["Title"] = "Rent book";
}

<h1>Confirm rental of this book:</h1>
<hr />

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<div class="mb-3">
    <h2><strong>Title:</strong> @Model.Title</h2>

    @if (Model.IsAvailableForRent)
    {
        <h2><strong>Status:</strong> Available</h2>
    }
    else
    {
        <h2><strong>Status:</strong> Unavailable</h2>
        @if (Model.UnavailableUntil != null)
        {
            <h2><strong>Available again after:</strong> @Model.UnavailableUntil</h2>
        }
    }
</div>

@if (!Model.IsAvailableForRent)
{
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Back</a>
}
else
{
    <form asp-action="Rent" method="post" class="mt-3">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Title" />

        <div class="mb-3">
            <label asp-for="Days" class="form-label">Rental period (days)</label>
            <select asp-for="Days" class="form-select">
                <option value="7">7</option>
                <option value="14">14</option>
                <option value="30">30</option>
                <option value="60">60</option>
            </select>
            <span asp-validation-for="Days" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Confirm rent</button>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
    </form>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
}