@model Ksiegarnia.ViewModels.UsersProfile.UserProfileViewModel

@{
    ViewData["Title"] = "My profile";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<h2>My profile</h2>

<p class="profile-text"><strong>Email:</strong> @Model.Email</p>
<p class="profile-text"><strong>Initials:</strong> @Model.Initials</p>
<p class="profile-text"><strong>Notifications:</strong> @(Model.EnableNotifications ? "Enabled" : "Disabled")</p>
<p class="profile-text"><strong>Role:</strong> @Model.UserRole</p>

<div class="mt-3 buttons-profile">
    <a asp-action="Edit" class="btn btn-primary">Edit personal information</a>
    <a asp-action="MyLoans" class="btn btn-secondary">My loans</a>
    <a asp-action="ResetPassword" class="btn btn-warning">Reset password</a>
</div>