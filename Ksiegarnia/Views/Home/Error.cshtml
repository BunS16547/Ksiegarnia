@model Ksiegarnia.ViewModels.Home.ErrorViewModel

@{
    ViewData["Title"] = "Error";
}

<div class="container mt-4">
    <div class="p-4 rounded-4 border border-light bg-black">
        <h1 class="h3 mb-2">Something went wrong</h1>
        <p class="mb-3">An unexpected error occurred while processing your request.</p>

        @if (Model.ShowRequestId)
        {
            <p class="mb-0">
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </p>
        }

        <div class="mt-3">
            <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Back to Home</a>
        </div>
    </div>
</div>