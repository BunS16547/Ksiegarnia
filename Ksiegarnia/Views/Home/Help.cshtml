@{
    ViewData["Title"] = "Help";
}

<div class="container mt-4">
    <div class="p-4 rounded-4 border border-light bg-black">
        <h1 class="h1 mb-3">Help</h1>

        <div class="mb-3">
            <h2 class="h2">Login / Register</h2>
            <h4 class="mb-0">
                Use the Identity pages for login and registration. Google login is available as an external login provider.
            </h4>
        </div>

        <div class="mb-3">
            <h2 class="h2">Browsing</h2>
            <h4 class="mb-0">
                Go to Books / Authors / Categories / Isbns to browse the catalog and stored data.
            </h4>
        </div>

        <div class="mb-3">
            <h2 class="h2">Administration</h2>
            <h4 class="mb-0">
                Admin/Editor users can add/edit/create/delete all catalog data and only admins can manage users.
            </h4>
        </div>

        <div class="mt-3">
            <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Back to Home</a>
        </div>
    </div>
</div>