@model Ksiegarnia.ViewModels.Authors.AuthorViewModel

@{
    ViewData["Title"] = "Delete a Author";
}

<div class="delete-wrapper">
    <h1>Are you sure you want to delete this Author?</h1>

    <h2>Name of the Author: @Model.Name</h2>
    <h2>Age of the Author: @Model.Age</h2>
    
    @if (Model.BookTitles != null && Model.BookTitles.Count > 0)
    { 
        <h2>Books' titles made by this Author are: </h2>
                        
        @foreach (var bookTitle in Model.BookTitles) {
            <h2 class="book-title">@bookTitle</h2>
        }
    }
    else
    {
        <h2>No books were made by this Author :[</h2>
    }
    
    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <input type="hidden" asp-for="Id"/>
        <input type="submit" class="btn btn-danger" value="Delete the Author"/>
    </form>
</div>