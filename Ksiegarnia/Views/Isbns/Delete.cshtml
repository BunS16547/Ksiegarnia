@model Ksiegarnia.ViewModels.Isbns.IsbnViewModel

@{
    ViewData["Title"] = "Delete an isbn";
}

<div class="delete-wrapper">
    <h1>Are you sure you want to delete this isbn?</h1>

    <h2>Value: @Model.Value</h2>
    
    @if(Model.BookTitle != null) {
        <h2>Assigned book's title: @Model.BookTitle</h2>
    }
    else {
        <h2> No book is assigned</h2>
    }
    
    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <input type="hidden" asp-for="Id"/>
        <input type="submit" class="btn btn-danger" value="Delete the Isbn"/>
    </form>
</div>