@model Ksiegarnia.ViewModels.UsersManage.UserEditViewModel

@{
    ViewData["Title"] = "Edit user";
    var lockoutResetChecked = Model.ResetLockOut;
}

<h2>Edit user</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="Edit" method="post" asp-route-id="@Model.Id">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <partial name="_UserForm" model="Model" />

    <div class="mb-3">
        @if (Model.LockoutEnd > DateTimeOffset.UtcNow)
        {
            <p class="text-danger">
                Currently locked until: @Model.LockoutEnd
            </p>
        }
        
        @if (!lockoutResetChecked) {
            <label asp-for="LockoutMinutes">
                Lock account for (minutes). Works only if lockout reset is unchecked
            </label>

            <input asp-for="LockoutMinutes"
                   class="form-control color-dark"
                   type="number"
                   min="1"
                   placeholder="e.g. 60" />
        }
        else {
            <p> Lockout minutes available only when reset lockout is unchecked </p>
        }
        
        <input asp-for="ResetLockOut"
               type="checkbox" 
               class="form-check-input"/>
        <label asp-for="ResetLockOut" class="form-check-label">
            Reset lockout
        </label>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary margin-left-small">Back</a>
    <div class="margin-top-small">
        <a asp-action="ResetPassword" asp-route-id="@Model.Id" class="btn btn-outline-warning">
            Reset password
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}