@model Ksiegarnia.ViewModels.UsersManage.UserFormViewModel

<div class="mb-3">
    <label asp-for="Email" class="form-label"></label>
    <input asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="Initials" class="form-label"></label>
    <input asp-for="Initials" class="form-control" />
    <span asp-validation-for="Initials" class="text-danger"></span>
</div>

<div class="form-check mb-2">
    <input asp-for="EmailConfirmed" class="form-check-input" />
    <label asp-for="EmailConfirmed" class="form-check-label"></label>
</div>

<div class="form-check mb-3">
    <input asp-for="EnableNotifications" class="form-check-input" />
    <label asp-for="EnableNotifications" class="form-check-label"></label>
</div>

<div class="mb-3">
    <label class="form-label">Select a Role:</label>

    @foreach (var role in Model.AvailableRoles)
    {
        <div class="form-check">
            <input class="form-check-input"
                   type="radio"
                   asp-for="SelectedRole"
                   id="@role"
                   value="@role"/>
            <label class="form-check-label" asp-for="SelectedRole" for="@role">
                @role
            </label>
        </div>
    }

    <span asp-validation-for="SelectedRole" class="text-danger"></span>
</div>